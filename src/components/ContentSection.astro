---
import { clsx } from '../services/classname.service'
import { t } from 'i18next'

interface Props {
    id: string
    headingClass?: string
    class?: string
}
const { id, class: className, headingClass } = Astro.props
---

<section id={id} class={clsx('my-28 scroll-mt-4', className)}>
    <div class={clsx('flex items-center flex-col gap-1 contained')}>
        <h2 class={clsx('text-center text-primary-500', headingClass)}>
            {t(`${id}.heading`)}
        </h2>
        <p class="text-lg opacity-70 text-center">
            {t(`${id}.intro`)}
        </p>
        <div class="mt-3 w-full"><slot /></div>
    </div>
</section>
